{% extends 'base.html.twig' %}

{% block title %}Tous les courriers!{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h3>Messagerie</h3>
                <h4>Message de {{ courrier.sender.email }}</h4>
                <h5>{{ courrier.ObjetCourrier }}</h5>
                <div class="container">{{ courrier.Message }}</div>
                <p>{{ courrier.TypeCourrier }}</p>
                <p>{{ courrier.estValidE }}</p>
                <a class="btn btn-primary" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button"
                   aria-controls="offcanvasExample">Voir mes dossiers</a>
                <a href="{{ path('recu') }}" class="btn btn-primary">Retour à la Boîte de réception</a>
            </div>

            <div class="col-sm-12">
                <div class="offcanvas offcanvas-start" tabindex="-1"
                     id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
                    <div class="offcanvas-header">
                        <h3 class="offcanvas-title" id="offcanvasExampleLabel">Mes dossiers</h3>
                        <button type="button" class="btn-close text-reset"
                                data-bs-dismiss="offcanvas" aria-label="Close">
                        </button>
                    </div>

                    <div class="offcanvas-body">

                        <div class="list-group">
                            <a href="{{ path("courrier") }}" class="list-group-item
                list-group-item-action ">Acceuil</a>
                        </div>

                        <div class="list-group">
                            <a href="{{ path('recu') }}" class="list-group-item
                list-group-item-action active">Boîte de
                                réception</a>
                        </div>
                        <div class="list-group">
                            <a href="{{ path('courrier') }}" class="list-group-item
                list-group-item-action ">Eléments
                                Envoyés</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

{% endblock %}