{% extends "base.html.twig" %}
{% block title %}Ajout de courrier{% endblock %}

{% block body %}

    <div class="container-fluid">

        <div class="row">

            <div class="col-sm-4 offset-4 mt-2">
                <h3>Envoyer un courrier</h3>
                {{ form_start(form) }}
                {{ form_row(form.recipient) }}
                {{ form_row(form.TypeCourrier) }}
                {{ form_row(form.ObjetCourrier) }}
                {{ form_row(form.Message) }}
                {{ form_row(form.estValidE) }}
                <button class="btn btn-success">Envoyer</button>
                <a class="btn btn-primary" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">Voir mes dossiers</a>
                {{ form_end(form) }}
            </div>
            <div class="col-sm-10 offset-1">
                <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
                    <div class="offcanvas-header">
                        <h3 class="offcanvas-title" id="offcanvasExampleLabel">Mes dossiers</h3>
                        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <div class="list-group">
                            <a href="{{ path('courrier') }}" class="list-group-item list-group-item-action ">Acceuil</a>
                        </div>
                        <div class="list-group">
                            <a href="{{ path('recu') }}" class="list-group-item list-group-item-action ">Boîte de réception</a>
                        </div>
                        <div class="list-group">
                            <a href="{{ path('courrier') }}" class="list-group-item list-group-item-action ">Eléments Envoyés</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

{% endblock %}