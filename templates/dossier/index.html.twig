{% extends 'base.html.twig' %}

{% block title %}Dossier!{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <h3 class="float-left">Tous les dossier</h3>
            <p class="float-right creat-btn mt-2">
                <a href="{{ path('dossier_new') }}" class="btn btn-soft-primary"><i class="fa fa-plus"></i> Ajouter</a>
            </p>

            <table class="table">
                <thead>
                <tr>
                    <td>Nom</td>
                    <td>Description</td>
                    <td>Actions</td>
                </tr>
                </thead>
                <tbody>
                {% for dossier in dossiers %}
                    <tr>
                        <td>{{ dossier.NomDossier }}</td>
                        <td>{{ dossier.Description }}</td>
                        <td>
                            <a href="{{ path('dossier_edit',{id:dossier.id})}}"><svg xmlns="http://www.w3.org/2000/svg"
                                                                                     width="30" height="30" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                </svg></a>
                            <a href="{{ path('dossier_delete',{id:dossier.id})}}"><svg xmlns="http://www.w3.org/2000/svg"
                                                                                       width="30" height="30" fill="currentColor" class="bi bi-trash-fill text-danger" viewBox="0 0 16 16">
                                    <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                                </svg></a>
                        </td>
                    </tr>

                {% endfor %}
                </tbody>
            </table>
        </div>


    </div>
</div>

{% endblock %}